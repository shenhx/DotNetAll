<Window x:Class="WpfApplicationDemo.PolygonDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PolygonDemo" Height="300" Width="300">
    <Grid>
        <Canvas>
            <Polygon Stroke="Blue" StrokeThickness="1" Fill="Yellow" Canvas.Left="10" Canvas.Top="10"
                     FillRule="EvenOdd" Points="15,200 68,70 110,200 0,125 135,125"></Polygon>
        </Canvas>
        
    </Grid>
</Window>
