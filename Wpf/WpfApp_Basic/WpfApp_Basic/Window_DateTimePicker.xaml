<Window x:Class="WpfApp_Basic.Window_DateTimePicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_Basic"
        mc:Ignorable="d"
        Title="Window_DateTimePicker" Height="450" Width="800">
    <Window.Resources>
        
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <DatePicker Height="25" Width="200" SelectedDateFormat="Long"></DatePicker>
        <local:DateTimePicker Height="25" Width="200" Grid.Row="1" DateTimeFormat="yyyy/MM/dd hh:mm:ss" Margin="0,20"></local:DateTimePicker>
        <local:KdyDatetimePicker Height="25" Width="200" Grid.Row="2" DateTimeFormat="yyyy/MM/dd HH:mm:ss" Value="2018-03-19 12:00:00" Margin="0,20"></local:KdyDatetimePicker>
    </Grid>
</Window>
    
